# ==============================================================================
# Production Environment Configuration
# ==============================================================================
# Passwords are automatically generated by Terraform using random_password resource

# AWS Configuration
aws_region  = "us-east-1"
owner_team  = "platform-engineering"
cost_center = "infrastructure"

# Database Configuration
db_master_username = "dbadmin"
db_host            = "prod-db.example.com"

# Rotation Lambda (deploy this first)
rotation_lambda_arn = "arn:aws:lambda:us-east-1:123456789012:function:secret-rotation"

# Cross-Account Access - replace with your account IDs
app_account_principals = [
  "arn:aws:iam::111111111111:root",  # App Account 1
  "arn:aws:iam::222222222222:root",  # App Account 2
]
